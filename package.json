{
  "name": "template-typescript-nodemon",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Base template for TypeScript projects using nodemon",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "develop": "nodemon",
    "build": "tsc",
    "lint": "tslint --fix -p . -c tslint.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.18",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "nodemonConfig": {
    "exec": "ts-node src/index.ts",
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
